@{
    Layout = "_Layout";
    ViewData["Title"] = "Page Not Found";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="error-container">
                <h1 class="display-1 fw-bold text-danger">404</h1>
                <h2 class="display-5 mb-4">Page Not Found</h2>
                <p class="lead mb-4">
                    Sorry, the page you're looking for doesn't exist or has been moved.
                </p>
                <div class="mb-4">
                    <p class="text-muted">
                        The resource you requested could not be found on this server.
                    </p>
                </div>
                <div>
                    <a href="/" class="btn btn-primary btn-lg me-2">Go to Home</a>
                    <a href="/Employees/Index" class="btn btn-outline-primary btn-lg">View Employees</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .error-container {
        padding: 60px 20px;
        text-align: center;
    }

    .display-1 {
        font-size: 120px;
        margin-bottom: 20px;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
    }
</style>
