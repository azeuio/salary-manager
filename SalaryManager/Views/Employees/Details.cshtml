@model SalaryManager.Models.Employee
@{
    Layout = "_Layout";
    ViewData["Title"] = "Employee Details";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8">
            <h1>Employee Details</h1>
            <hr />
            <div class="card">
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h5>Personal Information</h5>
                            <p><strong>Name:</strong> @Model.FirstName @Model.LastName</p>
                            <p><strong>Email:</strong> <a href="mailto:@Model.Email">@Model.Email</a></p>
                        </div>
                        <div class="col-md-6">
                            <h5>Employment Information</h5>
                            <p><strong>Department:</strong> <span class="badge bg-info">@Model.Department</span></p>
                            <p><strong>Joined:</strong> @Model.CreatedDate.ToString("yyyy-MM-dd")</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <h5>Salary Information</h5>
                            <p><strong>Base Salary:</strong> $@Model.BaseSalary.ToString("N2")</p>
                            <p><strong>Bonus Percentage:</strong> @Model.BonusPercentage%</p>
                            <p><strong>Bonus Amount:</strong> $@((Model.BaseSalary * Model.BonusPercentage / 100).ToString("N2"))</p>
                        </div>
                        <div class="col-md-6">
                            <h5>Total Compensation</h5>
                            <p class="display-6 text-success">$@Model.GetTotalSalary().ToString("N2")</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="mt-3">
                <a href="/Employees/Edit/@Model.Id" class="btn btn-warning">Edit</a>
                <a href="/Employees/Delete/@Model.Id" class="btn btn-danger">Delete</a>
                <a href="/Employees/Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>
