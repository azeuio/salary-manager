@model List<SalaryManager.Models.Employee>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Analytics";
}

<div class="container-fluid mt-5 px-4">
    <h1 class="mb-4">Salary Analytics Dashboard</h1>

    <div class="row mb-5">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Average Salary by Department</h5>
                </div>
                <div class="card-body">
                    <canvas id="departmentChart" height="80"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Employees by Department</h5>
                </div>
                <div class="card-body">
                    <canvas id="departmentPieChart" height="80"></canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-5">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Employee Salary Comparison</h5>
                </div>
                <div class="card-body">
                    <canvas id="salaryComparisonChart" height="40"></canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">Base Salary vs Total Salary</h5>
                </div>
                <div class="card-body">
                    <canvas id="baseTotalChart" height="40"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Chart colors
    const chartColors = ['#0d6efd', '#198754', '#ffc107', '#dc3545', '#6f42c1', '#20c997'];

    // Fetch and display salary by department
    fetch('/api/employees/salary-by-department')
        .then(response => response.json())
        .then(data => {
            const labels = data.map(d => d.department);
            const averages = data.map(d => d.average);

            new Chart(document.getElementById('departmentChart'), {
                type: 'bar',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Average Salary ($)',
                        data: averages,
                        backgroundColor: chartColors,
                        borderColor: chartColors,
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        });

    // Fetch and display department distribution
    fetch('/api/employees/department-distribution')
        .then(response => response.json())
        .then(data => {
            const labels = data.map(d => d.department);
            const counts = data.map(d => d.count);

            new Chart(document.getElementById('departmentPieChart'), {
                type: 'pie',
                data: {
                    labels: labels,
                    datasets: [{
                        data: counts,
                        backgroundColor: chartColors,
                        borderColor: '#fff',
                        borderWidth: 2
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    plugins: {
                        legend: {
                            position: 'bottom'
                        }
                    }
                }
            });
        });

    // Fetch and display salary distribution
    fetch('/api/employees/salary-distribution')
        .then(response => response.json())
        .then(data => {
            const labels = data.map(d => d.name);
            const baseSalaries = data.map(d => d.baseSalary);
            const totalSalaries = data.map(d => d.totalSalary);

            new Chart(document.getElementById('salaryComparisonChart'), {
                type: 'bar',
                data: {
                    labels: labels,
                    datasets: [
                        {
                            label: 'Base Salary ($)',
                            data: baseSalaries,
                            backgroundColor: 'rgba(13, 110, 253, 0.7)',
                            borderColor: 'rgb(13, 110, 253)',
                            borderWidth: 1
                        },
                        {
                            label: 'Total Salary ($)',
                            data: totalSalaries,
                            backgroundColor: 'rgba(25, 135, 84, 0.7)',
                            borderColor: 'rgb(25, 135, 84)',
                            borderWidth: 1
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        });

    // Fetch and display combined chart
    fetch('/api/employees/salary-distribution')
        .then(response => response.json())
        .then(data => {
            const labels = data.map(d => d.name);
            const baseSalaries = data.map(d => d.baseSalary);
            const bonuses = data.map((d, i) => d.totalSalary - d.baseSalary);

            new Chart(document.getElementById('baseTotalChart'), {
                type: 'bar',
                data: {
                    labels: labels,
                    datasets: [
                        {
                            label: 'Base Salary ($)',
                            data: baseSalaries,
                            backgroundColor: 'rgba(13, 110, 253, 0.8)'
                        },
                        {
                            label: 'Bonus Amount ($)',
                            data: bonuses,
                            backgroundColor: 'rgba(255, 193, 7, 0.8)'
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    scales: {
                        x: {
                            stacked: false
                        },
                        y: {
                            beginAtZero: true,
                            stacked: false
                        }
                    }
                }
            });
        });
</script>
