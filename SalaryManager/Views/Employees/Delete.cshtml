@model SalaryManager.Models.Employee
@{
    Layout = "_Layout";
    ViewData["Title"] = "Delete Employee";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <h1>Delete Employee</h1>
            <div class="alert alert-danger">
                <h4 class="alert-heading">Are you sure?</h4>
                <p>You are about to permanently delete this employee record.</p>
            </div>
            <div class="card">
                <div class="card-body">
                    <p><strong>Name:</strong> @Model.FirstName @Model.LastName</p>
                    <p><strong>Email:</strong> @Model.Email</p>
                    <p><strong>Department:</strong> @Model.Department</p>
                    <p><strong>Base Salary:</strong> $@Model.BaseSalary.ToString("N2")</p>
                </div>
            </div>
            <div class="mt-3">
                <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
                    <button type="submit" class="btn btn-danger">Yes, Delete</button>
                    <a href="/Employees/Index" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
