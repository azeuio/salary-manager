@model List<SalaryManager.Models.Employee>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Employees";
}

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1>Employees</h1>
        </div>
        <div class="col-md-4 text-end">
            <a href="/Employees/Create" class="btn btn-primary">Add New Employee</a>
        </div>
    </div>

    <div class="mb-3">
        <div class="btn-group" role="group">
            <a href="/Employees/Index?sortOrder=name" class="btn btn-outline-secondary">Sort by Name</a>
            <a href="/Employees/Index?sortOrder=salary" class="btn btn-outline-secondary">Sort by Salary</a>
            <a href="/Employees/Index?sortOrder=department" class="btn btn-outline-secondary">Sort by Department</a>
        </div>
    </div>

    @if (Model != null && Model.Count > 0)
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Department</th>
                        <th>Base Salary</th>
                        <th>Bonus %</th>
                        <th>Total Salary</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var employee in Model)
                    {
                        <tr>
                            <td>@employee.FirstName @employee.LastName</td>
                            <td>@employee.Email</td>
                            <td>
                                <span class="badge bg-info">@employee.Department</span>
                            </td>
                            <td>$@employee.BaseSalary.ToString("N2")</td>
                            <td>@employee.BonusPercentage%</td>
                            <td class="fw-bold">$@employee.GetTotalSalary().ToString("N2")</td>
                            <td>
                                <a href="/Employees/Details/@employee.Id" class="btn btn-sm btn-info">View</a>
                                <a href="/Employees/Edit/@employee.Id" class="btn btn-sm btn-warning">Edit</a>
                                <a href="/Employees/Delete/@employee.Id" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-warning">No employees found. <a href="/Employees/Create">Add one now</a>.</div>
    }
</div>
